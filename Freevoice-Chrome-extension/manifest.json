{
  "manifest_version": 3,
  "name": "FreeVoice Reader - AI Text to Speech",
  "version": "1.1.0",
  "description": "Convert any text to natural speech. 50+ voices, 7 languages. Runs 100% locally - your text stays private.",
  "default_locale": "en",
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "offscreen",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "FreeVoice Reader"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content-script.js"],
      "css": ["styles/player.css"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options/options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "lib/*",
        "styles/*",
        "icons/*",
        "offscreen/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "read-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Read selected text with FreeVoice"
    }
  }
}
